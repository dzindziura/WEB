<!-- Модальне вікно -->
<div class="modal fade" id="modal_piers" data-bs-backdrop="static" data-bs-keyboard="true" tabindex="-1"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-dark">

      <!-- Заголовок модального вікна -->
      <div class="modal-header border-secondary">
        <div class="d-flex flex-column">
          <span class="fs-3 lh-1" id="pier_title">#Title</span>
        </div>
        <button type="button" class="btn-close bg-primary" data-bs-dismiss="modal"></button>
      </div>

      <!-- Тіло модального вікна -->
      <div class="modal-body">
        <form>

          

          <div class="row gx-3">
            <div class="col-12 col-sm-2">

              <!-- Місткість -->
              <span class="fs-5">Місткість</span>
              <input class="form-control fs-5 bg-dark text-light border-primary" id="pier_max_ships" type="number"
                placeholder="Місткість" oninput="set_max_ships(this)">
            </div>

            <div class="col-12 mb-2 d-block d-sm-none"></div>
            <div class="col-12 col-sm-10">

              <!-- Порт -->
              <span class="fs-5"> &nbsp; Порт</span>
              <div class="dropdown">
                <button class="btn btn-outline-primary fs-5 w-100 dropdown-toggle" type="button" id="pier_port"
                  data-bs-toggle="dropdown" aria-expanded="false">Виберіть порт</button>
                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="pier_port"
                  id="pier_ports_list">
                  <li><span class="dropdown-item" onclick="set_port(this)">. . .</span></li>
                </ul>
              </div>

            </div>
          </div>
        </form>
      </div>

      <!-- Кнопки модального вікна -->
      <div class="modal-footer border-secondary">
        <button class="btn btn-outline-primary" id="pier_yes" data-bs-dismiss="modal"
          onclick="modal_add_piers()">#Yes</button>
        <button class="btn btn-outline-secondary" id="pier_no" data-bs-dismiss="modal">Відміна</button>
      </div>
    </div>
  </div>
</div>